<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
    <%= render 'fields', :f => f %>
    <div class="actions">
        <div class="input">
            <%= f.submit "Update" %>
        </div>
    </div>
<% end %>

<div>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
</div>
