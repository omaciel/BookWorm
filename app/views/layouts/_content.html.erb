<!-- main content goes here -->
<div class="content">

    <div class="page-header">
        <h1>BookWorm: <small>Track and manage books you want to read.</small></h1>
    </div>
    <div class="row">
        <div class="span10">
            <section class="round">
            <% flash.each do |key, value| %>
                <div class="flash <%= key %>"><%= value %></div>
            <% end %>
            </section>
            <%= yield %>
        </div>
        <div class="span4">
            <h3>Side bar</h3>
        </div>
    </div>

    <%= render 'layouts/footer' %>

</div>
