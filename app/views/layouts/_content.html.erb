<!-- main content goes here -->
<div class="content">

    <div class="page-header">
        <h1>BookWorm: <small>Track and manage books you want to read.</small></h1>
    </div>
    <div class="row">
        <div class="span10">
            <section class="round">
            <% flash.each do |key, value| %>
                <div class="flash <%= key %>"><%= value %></div>
            <% end %>
            </section>
            <%= yield %>
        </div>
        <div class="span4">
            <% if signed_in? %>
                <h3>
                    <%= gravatar_for @user %>
                    <%= link_to @user.name, current_user %>
                </h3>
            <% else %>
                <h3>Second content</h3>
            <% end %>
        </div>
    </div>

    <%= render 'layouts/footer' %>

</div>
