<!-- main content goes here -->
<div class="content">

    <div class="page-header">
        <h1>BookWorm: <small>Track and manage books you want to read.</small></h1>
    </div>
    <div class="row">
        <div class="span10">
            <%= yield %>
        </div>
        <div class="span4">
            <% if @user %>
                <%= gravatar_for @user %>
                <%= link_to @user.name, user_path %>
            <% else %>
                <h3>Side bar</h3>
            <% end %>
        </div>
    </div>

    <%= render 'layouts/footer' %>

</div>
