<table class="books table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Pages</th>
      <th>Started On:</th>
      <th>Finished On:</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= link_to book.author, book_path(book) %></td>
        <td><%= book.pages %></td>
        <td><%= (book.started_at.blank? ? '' : book.started_at.strftime('%m/%d/%Y')) %></td>
        <td><%= (book.finished_at.blank? ? '' : book.finished_at.strftime('%m/%d/%Y')) %></td>
        <td><%= book.status %></td>
        <td>
          <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', book_path(book), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="pull-right">Books read: <span class="badge badge-succes"><%= @total_books %></span> | Pages read: <span class="badge badge-inverse"><%= @total_pages %></span> | <span class="badge badge-info"><%= link_to 'New', new_book_path %></span></p>
