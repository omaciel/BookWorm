<%= form_for(@book) do |f| %>
    <%= render 'shared/book_messages', :object => f.object %>

    <fieldset>
        <div class="clearfix">
            <%= f.label :title %>
            <div class="input">
                <%= f.text_field :title %>
            </div>
        </div>
        <div class="clearfix">
            <%= f.label :author %>
            <div class="input">
                <%= f.text_field :author %>
            </div>
        </div>
        <div class="clearfix">
            <%= f.label :pages %>
            <div class="input">
                <%= f.number_field :pages %>
            </div>
        </div>
        <div class="clearfix">
            <%= f.label :started_at, "Started" %>
            <div class="input">
                <%= f.date_select :started_at, :include_blank => true %>
            </div>
        </div>
        <div class="clearfix">
            <%= f.label :finished_at, "Finished" %>
            <div class="input">
                <%= f.date_select :finished_at, :include_blank => true %>
            </div>
        </div>
        <div class="clearfix">
            <%= f.label :status %>
            <div class="input">
                <%= f.select :status, options_for_select(["Finished", "Reading", "On Hold", "Queued"], f.object.status.nil? ? "Queued" : f.object.status) %>
            </div>
        </div>
        <div class="actions">
            <div class="input">
                <%= f.submit "Save changes", :class => "btn success" %>
                <%= link_to 'Cancel', root_path, :class => "btn primary" %>
            </div>
        </div>
    </fieldset>
<% end %>
